<div class="bg-black">bg-black</div>
<div class="bg-white">bg-white</div>
<div class="bg-transparent">bg-transparent</div>

<% scales = [50, 100, 200, 300, 400, 500, 600, 700, 800, 900, 950] %>
<% colors = %w(slate gray zinc neutral stone red orange amber yellow lime green emerald teal cyan sky blue indigo violet purple fuchsia pink rose) %>
<% colors.each do |color| %>
  <% scales.each do |scale| %>
    <div class="bg-<%= color %>-<%= scale %>">bg-<%= color %>-<%= scale %></div>
  <% end %>
<% end %>
